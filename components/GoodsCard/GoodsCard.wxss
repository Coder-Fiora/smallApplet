.card {
  width: 46vw;
  flex-shrink: 0;
  margin-bottom: 40rpx;
}
.card .image {
  width: 100%;
  height: 320rpx;
  background: #ededed;
}
.card .image image{
    width: 100%;
    height: 100%;
}
.card .describe {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  padding: 10rpx 10rpx 0 10rpx;
  background: #fafafa;
  font-size: 30rpx;
}
.card .money {
  padding: 16rpx 10rpx 16rpx 10rpx;
  display: flex;
  align-items: flex-end;
  background: #fafafa;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}
.card .money .new1,
.card .money .new2 {
  color: #ee0f1a;
  font-weight: 500;
}

.card .money .new1,
.card .money .origin1 {
  font-size: 20rpx;
  margin-bottom: 3rpx;
  margin-right: 4rpx;
}
.card .money .origin1,
.card .money .origin2 {
  color: #b3aeae;
  font-size: 22rpx;
  text-decoration: line-through;
  margin-right: 0;
}
.card .money .new2 {
  margin-right: 16rpx;
}
.card .money .origin2 {
  text-decoration: line-through;
  font-size: 22rpx;
  margin-bottom:3rpx;
}
