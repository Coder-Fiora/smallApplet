.container {
  background: #ffffff;
  width: 600rpx;
  height: 800rpx;
  border-radius: 16rpx;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}
.contanner_box{
    position: absolute;
    left: 50%;
    top: 50%;
    z-index: 500;
    transform: translate(-50%, -50%) scale(1.2);
    transition: all 0.4s;
    transform-origin: 50% 50% 0;
    opacity: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.contanner_box.open{
    opacity: 1;
    transform: translate(-50%, -50%) scale(1);
}
.contanner_box.close{
    opacity: 0;
    transform: translate(-50%, -50%) scale(1.2);
}
.container .info {
  padding: 30rpx 30rpx 10rpx 30rpx;
  color: #888888;
  font-size: 24rpx;
  line-height: 36rpx;
}
.container .info .title {
  color: #000;
  font-weight: bolder;
  margin-bottom: 10rpx;
  font-size: 30rpx;
}
.container .info > view {
  margin: 10rpx 0;
}
.info .room_sheshi{
   display: flex;
   flex-wrap: wrap;
   font-size: 24rpx;
   color: #999999;
   text-align: left;
   line-height: 60rpx;
}
.info .room_sheshi view{
       width: 50%;
}
.mgtop100{
    margin-top: 80rpx;
}

.container .info .basic{
    margin-top: 20rpx;
    color: #333333;
}
.container .info .gift{
    color: #333333;
}
.back_ground{
    background: rgba(0,0,0,0.5);
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    z-index: -1;
    opacity: 0;
    transition: all 0.3s;
}
.back_ground.active{
    opacity:1;
    z-index: 400;
}
::-webkit-scrollbar {
    display: none;
    width: 0;
    height: 0;
    color: transparent;
}
::-ms-scrollbar {
    display: none;
    width: 0;
    height: 0;
    color: transparent;
}
::-moz-scrollbar {
    display: none;
    width: 0;
    height: 0;
    color: transparent;
}
.closebtn{
    width: 60rpx;
