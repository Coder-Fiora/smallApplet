/* pages/food/detail.wxss */
.food_jianjie{
    width: 690rpx;
    min-height: 200rpx;
    border-radius: 12rpx;
    border:1px solid #f6f6f6;
    color: #333333;
    font-size: 28rpx;
    line-height: 48rpx;
    margin: 50rpx auto;
    padding: 20rpx;
    box-sizing: border-box;
    margin-top: 0;
    text-align: justify;
}
.title{
    margin-left: 30rpx;
    font-size: 30rpx;
    font-weight: 600;
    padding: 10rpx 20rpx;
    border-radius: 12rpx 12rpx 0 12rpx;
    background-color: #f6f6f6;
    width: 120rpx;
    color: #333333;
}
.shicai{
    padding: 20rpx 30rpx;
    font-size: 28rpx;
    line-height: 60rpx;
    text-align: justify;
}
.name{
    padding: 20rpx 30rpx;
    font-size: 32rpx;
}
.btn_food{
    width: 93%;
    height: 80rpx;
    margin: 0 auto;
    border-radius: 12rpx;
    /* background-color:  #e91212; */
    background-color:  #333333;
    font-size: 26rpx;
    text-align: center;
    line-height: 80rpx;
    color: white;
    margin-top: 45rpx;
    box-sizing: border-box;
}