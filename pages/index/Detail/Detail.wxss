/* pages/SpaDetail/SpaDetail.wxss */
.top_banner{
    width: 100%;
    height: 500rpx;
    position: relative;
}
.top_banner image{
    width: 100%;
    height: 100%;
}
.top_banner .share{
    position: absolute;
    right: 30rpx;
    top: 30rpx;
    width: 58rpx;
    height: 58rpx;
    border-radius: 50%;
    background: rgba(255,255,255,0.8);
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0;
}
.top_banner .share image{
    width: 30rpx;
    height: 30rpx;
}
.banner_box,.image_background{
    height: 100%;
}
.title{
    font-size: 32rpx;
    font-weight: 600;
    padding: 0 60rpx;
    margin-top: 60rpx;
    position: relative;
}
.title::after{
    content: '';
    display: block;
    width: 75rpx;
    height: 6rpx;
    background: #333333;
    position: absolute;
    top: 130%;
    left: 60rpx;
}
.content{
    margin-top: 50rpx;
    padding: 0 60rpx;
    color: #666666;
    font-size: 24rpx;
    line-height: 44rpx;
    padding-bottom: 200rpx;
}
.content .lit_title{
    text-align: center;
    font-weight: 600;
    margin-top: 40rpx;
}
.duanluo{
    margin-bottom: 30rpx;
}
.phone{
    margin-top: 30rpx;
}
.phone text{
    font-weight: 600;
}
.icon_phone{
    position: fixed;
    bottom: 30rpx;
    right: 30rpx;
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    background: #d81e06;
    display: flex;
    justify-content: center;
    align-items: center; 
    box-shadow: 0rpx 0rpx 0rpx 3rpx #e9a198;
}
.icon_phone image{
    width: 36rpx;
    height: 36rpx;
}
.address{
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 140rpx;
    border-top: 1px solid #ededed;
    padding: 0 60rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background: white;
    z-index: 30;
}
.address view{
    display: flex;
    width: 100%;
    justify-content: space-between;
    align-items: center;
    font-size: 28rpx;
    color: #333333;
    line-height: 50rpx;
}
.address image{
    width: 32rpx;
    height: 32rpx;
}