<view style="position:relative;height:{{clientHeight?clientHeight+'px':'auto'}}">
    <view class="top_banner_box">
        <swiper current="{{currentTab}}" duration="1000" style="height:{{clientHeight?clientHeight+'px':'auto'}};padding-top: {{statusHeight?statusHeight+'px':'auto'}};" bindchange="bindTouch" autoplay circular="true" class="banner_box">
            <swiper-item wx:for="{{banner_arr}}" wx:key="index">
                <view class="image_background">
                    <image class="banner_image" src="{{item.src}}" style="height:{{clientHeight?clientHeight+'px':'auto'}}" bindtap='topic_preview' data-id='{{item.id}}' data-url='{{item.src}}'></image>
                </view>
            </swiper-item>
        </swiper>
        <view class="baner_title">阳朔糖舍 桂林</view>
        <view class="indicator_box">
            <view wx:for="{{banner_arr}}" wx:key="index" class="{{currentTab==index?'active':''}}"></view>
        </view>
        <image class="bottom_array" src="/image/bottomArray.png"></image>
    </view>
</view>