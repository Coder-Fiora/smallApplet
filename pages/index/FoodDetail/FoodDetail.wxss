.top_banner_box {
    width: 100%;
    height: 100vh;
    position: relative;
    overflow: hidden;
}

.banner_box {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    overflow:unset;
}

.swiper_box {
    height: 800rpx;
    margin-top: 300rpx;
    position: relative;
    z-index: 66;
}

.banner_content {
    color: white;
    font-size: 24rpx;
    line-height: 40rpx;
    margin-bottom: 60rpx;
    width: 100%;
    position: absolute;
    top: 200rpx;
    left: 0;
    z-index: 30;
    padding: 0 60rpx 0 100rpx;
    box-sizing: border-box;
}

.banner_content text {
    font-size: 28rpx;
    font-weight: 600;
    text-align: center;
    display: block;
    margin-bottom: 12rpx;
}

.image_background {
    width: 510rpx;
    height: 540rpx;
}

.image_background image {
    width: 100%;
    height: 100%;
}

.default_image {
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 0;
    top: 0;
    left: -1;
}

.default_image image {
    width: 100%;
    height: 100%;
    filter: blur(6rpx);
}

.banner_image.active {
    transform: scale(1.2);
    transition: all .2s ease-in 0s;
    z-index: 20;
}