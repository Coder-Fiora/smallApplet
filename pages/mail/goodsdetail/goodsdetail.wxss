/* pages/mail/goodsdetail/goodsdetail.wxss */
.title{
    padding: 30rpx 30rpx;
    display: flex;
    justify-content: space-between;
    font-size: 32rpx;
    line-height: 48rpx;
    letter-spacing: 2rpx;
    border-bottom: 16rpx solid #ededed;
    font-weight: 500;
}
.title >view text{
    font-size: 24rpx;
    color: #666666;
    font-weight: normal;
}
.title image{
    width: 42rpx;
    height: 42rpx;
}
.address{
    display: flex;
    align-items: center;
    padding: 40rpx 30rpx;
    border-bottom: 16rpx solid #ededed;
    font-size: 28rpx;
    letter-spacing: 2rpx;
}
.address view{
    color: #ee352b;
    margin-left: 40rpx;
    font-size: 26rpx;
}
.goods{
  padding: 30rpx;
  border-bottom: 16rpx solid #ededed;
}
.goods .tit{
    font-size: 28rpx;
    font-weight: 500;
}
.goods .type{
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    margin-top: 20rpx;
    padding-bottom: 50rpx;
    border-bottom: 1px solid #ededed;
}
.goods .type text{
    display: block;
    padding: 12rpx 20rpx;
    border: 1px solid #ededed;
    border-radius: 12rpx;
    font-size: 24rpx;
    color: #666666;
    margin-right: 18rpx;
}
.price_image{
    display: flex;
    margin-top: 40rpx;
}
.price_image .image_box{
    width: 200rpx;
    height: 200rpx;
    background-color: #ededed;
    border-radius: 8rpx;
}
.price_image .image_box image{
    width: 100%;
    height: 100%;
}
.price_image .price{
    flex: 1;
    margin-left: 30rpx;
    font-size: 28rpx;
    line-height: 40rpx;
}
.price_image .price .number{
   color: #ee352b;
}
.price_image .price .number text{
    text-decoration: line-through;
    color: #666666;
    font-size: 20rpx;
    margin-left: 10rpx;
}

.goods_num{
    display: flex;
    justify-content: space-between;
    padding: 40rpx 30rpx;
    border-bottom: 16rpx solid #ededed;
    font-size: 28rpx;
    align-items: center;
}
.goods_num .choose_num{
    display: flex;
    align-items: center;
    font-size: 24rpx;
}
.goods_num .choose_num  .picker{
    padding: 10rpx 40rpx;
    background-color: #ededed;
    margin: 0 20rpx;
}
.goods_num .choose_num  >view image{
    width: 40rpx;
    height: 40rpx;
}
.detail_info{
    padding: 20rpx 30rpx;
    border-bottom: 16rpx solid #ededed;
}
.detail_info .same_tit{
    font-size: 32rpx;
    font-weight: 600;
    position: relative;
    margin-top: 50rpx;
    text-align: center;
}
.detail_info .same_tit::after{
    content: '';
    display: block;
    width: 60rpx;
    height: 6rpx;
    background-color: #e6e6e6;
    position: absolute;
    left: 50%;
    margin-left: -30rpx;
    top: 130%;
}
.detail_info .content{
    font-size: 28rpx;
    line-height: 44rpx;
    text-indent: 2em;
    margin-top: 60rpx;
    color: #333333;
    padding-bottom: 50rpx;
}
.card_phone{
    width:690rpx;
    height: 300rpx;
    border-radius: 12rpx;
    border: 1px solid #ededed;
    margin: 40rpx auto;
    padding: 50rpx 30rpx;
    font-size: 32rpx;
    box-sizing: border-box;
}
.card_phone text{
    font-size: 28rpx;
    line-height: 48rpx;
}
.card_phone view{
    display: flex;
    justify-content: space-between;
}
.card_phone view image{
    width: 30rpx;
    height: 30rpx;
}
.card_phone .name{
    margin-bottom: 60rpx;
}

.hotRecommend {
    padding: 30rpx 0;
    margin-top: 20rpx;
    border-top: 16rpx solid #ededed;
  }
  .hotRecommend .title {
    text-align: center;
    margin-bottom: 40rpx;
    border: none;
    display: block;
    padding: 20rpx 0;
  }
  .hotRecommend .cards {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    padding: 0 50rpx;
  }