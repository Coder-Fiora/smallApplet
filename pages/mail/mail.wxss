.mail {
  height: 1000rpx;
}

.mail .bigPack .title {
  display: flex;
  align-items: flex-end;
  padding: 40rpx 30rpx 50rpx 30rpx;
}
.mail .bigPack .title view {
  font-size: 42rpx;
  margin-right: 10rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
}
.mail .bigPack .title text {
  color: #b5b5b5;
  font-size: 26rpx;
  margin-left: 12rpx;
}
.mail .goods {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 20rpx;
  background-color: white;
}
.mail .goods .card{
    width: 44.8vw;
}
.mail .menu {
  display: flex;
  flex-wrap: wrap;
  margin: 30rpx 0;
  padding-top: 20rpx;
}
.mail .menu view {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 24rpx;
  margin-bottom: 25rpx;
}
.mail .menu view.active {
  color: #d81e06;
}
.mail .menu image {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 5rpx;
}
.mail .menu>view:nth-of-type(1) image{
    width: 54rpx;
    height: 54rpx;
    margin-bottom: -5rpx;
    margin-top: -4rpx;
}
.noLogin {
    background-color: #fdeff0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 25rpx 40rpx;
    font-size: 24rpx;
    width: 100%;
    box-sizing: border-box;
    letter-spacing: 2rpx;
  }
  .noLogin view{
      width: 104rpx;
      height: 46rpx;
      border: 1px solid #f7cccc;
      color: #f53e3e;
      text-align: center;
      line-height: 46rpx;
  }
  .search_box{
      width: 600rpx;
      height: 80rpx;
      border-radius: 40rpx;
      display: flex;
      align-items: center;
      background: white;
      padding: 0 30rpx;
      margin: 30rpx auto;
      box-sizing: border-box;
      box-shadow: 0 0 3rpx 3rpx rgba(0,0,0,0.3);
  }
  .search_box image{
      width: 40rpx;
      height: 40rpx;
  }
  .search_box input{
      font-size: 28rpx;
      color: #333333;
      padding-left: 30rpx;
      flex: 1;
  }
  .ipt_place{
      color: #d6d6d6;
  }