.mail {
  height: 1000rpx;
}
.mail .bigPack .title {
  display: flex;
  align-items: flex-end;
  padding: 40rpx 30rpx 50rpx 30rpx;
}
.mail .bigPack .title view {
  font-size: 42rpx;
  margin-right: 10rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
}
.mail .bigPack .title text {
  color: #b5b5b5;
  font-size: 26rpx;
  margin-left: 12rpx;
}
.mail .goods {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 30rpx;
}
.mail .goods .card{
    width: 44.8vw;
}
.mail .menu {
  display: flex;
  flex-wrap: wrap;
  margin: 30rpx 0;
  padding-top: 20rpx;
}
.mail .menu view {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 20rpx;
  margin-bottom: 25rpx;
}
.mail .menu view.active {
  color: #d81e06;
}
.mail .menu image {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 5rpx;
}
