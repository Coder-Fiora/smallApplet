.mail {
  height: 1000rpx;
}
.mail .bigPack .title {
  display: flex;
  align-items: flex-end;
  padding: 30rpx;
}
.mail .bigPack .title view {
  font-size: 42rpx;
  margin-right: 10rpx;
  font-weight: bolder;
}
.mail .bigPack .title text {
  color: #b5b5b5;
  font-size: 26rpx;
}
.mail .goods {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.mail .menu {
  display: flex;
  flex-wrap: wrap;
  margin: 30rpx 0;
}
.mail .menu view {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 20rpx;
  margin-bottom: 16rpx;
}
.mail .menu view.active {
  color: #9a3239;
}
.mail .menu image {
  width: 40rpx;
  height: 40rpx;
  border: 1px solid #000;
  margin-bottom: 5rpx;
}
