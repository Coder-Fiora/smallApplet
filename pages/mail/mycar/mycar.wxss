/* pages/mail/mycar/mycar.wxss */
.maneger{
    display: flex;
    justify-content: space-between;
    padding: 36rpx 30rpx;
    border-bottom: 20rpx solid #ededed;
    font-weight: 600;
    font-size: 36rpx;
    letter-spacing: 2rpx;
}
.maneger view{
    font-size: 28rpx;
    color: #666666;
    font-weight: normal;
}
.head{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30rpx 20rpx;
    padding-bottom: 10rpx;
}
.head >view:nth-of-type(1){
    width: 10%;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-right: 10rpx;
    margin-top: 50rpx;
}
.head >view:nth-of-type(2){
    flex: 1;
    padding-top: 30rpx;
    border-top: 1px solid #f6f6f6;
}
.head:nth-of-type(1) >view:nth-of-type(2){
    padding-top: 0;
    border: none;
}
.home{
    font-size: 28rpx;
    display: flex;
    align-items: center;
    margin-bottom: 36rpx;
}
.home image{
    width: 34rpx;
    height: 34rpx;
    margin-right: 10rpx;
}
.content_price{
    display: flex;
}
.content_price .left_image{
    width: 160rpx;
    height: 160rpx;
    margin-right: 20rpx;
    border-radius: 12rpx;
    overflow: hidden;
}
.content_price .left_image image{
    width: 100%;
    height: 100%;
}
.content_price .content{
    flex: 1;
}
.content_price .content .title{
    font-size: 30rpx;
    line-height: 50rpx;
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    text-overflow: ellipsis;
}
.content_price .content .guige{
    font-size: 24rpx;
    color: #999999; 
    line-height: normal;
    margin-bottom: 16rpx;
}
.content_price .content .price_box{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.content_price .content .price_box >text{
    color:rgba(255,0,0);
}
.content_price .content .price_box >text text{
    font-size: 22rpx;
}
.price_box .choose_num{
    display: flex;
    align-items: center;
    font-size: 28rpx;
}
.price_box .choose_num  .picker{
    padding: 5rpx 30rpx;
    background-color: #f6f6f6;
    margin: 0 10rpx;
}
.price_box .choose_num  >view{
    display: flex;
    align-items: center;
}
.price_box .choose_num  >view image{
    width: 30rpx;
    height: 30rpx;
}
checkbox .wx-checkbox-input {
    width:32rpx;
    height: 32rpx;
    border-radius: 50%;
  }
  
  /*checkbox选中后样式  */
  checkbox .wx-checkbox-input.wx-checkbox-input-checked {
    background: #dd3113;
    border: 1px solid #dd3113;
  }
  
  /*checkbox选中后图标样式  */
  checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
    width: 32rpx;
    height:32rpx;
    line-height: 32rpx;
    text-align: center;
    font-size: 24rpx;
    color: #fff;
    background: transparent;
    transform: translate(-50%, -50%) scale(1);
    -webkit-transform: translate(-50%, -50%) scale(1);
  }

  .compute{
      position: fixed;
      bottom: 0;
      width: 100%;
      padding: 0 30rpx;
      padding-right: 20rpx;
      box-sizing: border-box;
      height: 100rpx;
      display: flex;
      align-items: center;
      border-top: 1px solid #f6f6f6;
      font-size: 28rpx;
      line-height: 100rpx;
      background-color: white;
  }
  .compute .all_price{
     display: flex;
     align-items: center;
    font-size: 24rpx;
    margin-left: 30rpx;
    min-width: 300rpx;
  }
  .compute .all_price text{
      color: #dd3113;
      font-size: 30rpx;
      margin-left: 12rpx;
      font-weight: 500;
  }
  .hanlecompute{
      width: 280rpx;
      height: 80rpx;
      background-color: #000000;
      color: white;
      font-size: 28rpx;
      text-align: center;
      line-height: 80rpx;
      position: absolute;
      right: 20rpx;
      top: 10rpx;
  }
  .hanlecompute.redback{
      background-color: #dd3113;
      color: white;
  }
  .likegoods{
      padding-bottom: 120rpx;
  }
  .buy_btn{
      width: 630rpx;
      height: 90rpx;
      border-radius: 45rpx;
      background-color: #dd3113;
      color: white;
      font-size: 32rpx;
      text-align: center;
      line-height: 90rpx;
      margin: 0 auto;
  }