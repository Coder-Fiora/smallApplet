/* pages/room/search/search.wxss */
.top_banner{
    width: 100%;
    height: 500rpx;
    position: relative;
}
.top_banner image{
    width: 100%;
    height: 100%;
}
.top_banner .share{
    position: absolute;
    right: 30rpx;
    top: 30rpx;
    width: 58rpx;
    height: 58rpx;
    border-radius: 50%;
    background: rgba(255,255,255,0.8);
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0;
}
.banner_box,.image_background{
    height: 100%;
}
.title{
    margin: 0 30rpx;
    box-sizing: border-box;
    border-bottom: 1px solid #ededed;
    padding: 25rpx 0;
    background: white;
}
.title .name{
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-weight: 600;
    font-size: 34rpx;
    line-height: 50rpx;
}
.title image{
    width: 40rpx;
    height: 40rpx;
}
.title .address{
    display: flex;
    align-items: center;
    color: #666666;
    font-size: 24rpx;
    line-height: 50rpx;
}
.title .address image{
    margin-left: 14rpx;
    width: 30rpx;
    height: 30rpx;
}
.code{
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20rpx;
    padding: 30rpx;
    border-bottom: 16rpx solid #f6f6f6;
  }
.code > view view:nth-of-type(2) {
    color: #a2a2a2;
    font-size: 20rpx;
    text-decoration: underline;
    margin-top: 10rpx;
    letter-spacing: 2rpx;
  }
.code input {
    font-size: 24rpx;
    text-align: right;
  }
  .centerCard{
      display: flex;
      padding: 0 30rpx;
      justify-content: space-between;
      padding: 20rpx 30rpx;
      border-bottom: 16rpx solid #f6f6f6;
  }
  .centerCard .date {
    display: flex;
    padding: 20rpx 20rpx 20rpx 0;
    justify-content: space-between;
    align-items: center;
    width: 68%;
  }
  .centerCard .date .startTime view:nth-of-type(2),
  .centerCard .date .endTime view:nth-of-type(2) {
    font-size: 20rpx;
    color: #afafaf;
    margin-left: 10rpx;
  }
  .centerCard .date .startTime,  .centerCard .date .endTime{
      display: flex;
      align-items: center;
  }
  .centerCard .date .tag {
    border: 1px solid #f1aaad;
    padding: 4rpx 14rpx;
    color: #ec3c45;
    border-radius: 20rpx;
    font-size: 20rpx;
  }
  .centerCard .roomInfo {
    display: flex;
    justify-content: space-between;
    padding: 20rpx 0 20rpx 30rpx;
    font-size: 28rpx;
    position: relative;
  }
  .centerCard .roomInfo::before{
      content: '';
      display: block;
      position: absolute;
      width: 1px;
      height: 40rpx;
      background-color: #ededed;
      left: 0;
  }
  .roomConfig {
    padding: 28rpx 50rpx;
  }
  .roomConfig .title {
    text-align: center;
    margin-bottom: 20rpx;
  }
  .roomConfig .config {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30rpx 0;
  }
  .roomConfig .config + .config {
    border-top: 1px solid #ececec;
  }
  .roomConfig .config:nth-last-of-type(1) {
    margin-bottom: 20rpx;
  }
  .roomConfig .add {
    background: #e51f2b;
    color: #efd9d8;
  }